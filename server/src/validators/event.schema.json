{
  "$id": "event.schema.json",
  "type": "object",
  "required": ["device_id", "timestamp", "event_type", "event_data"],
  "properties": {
    "device_id": {"type": "string", "minLength": 1},
    "timestamp": {"type": "string", "format": "date-time"},
    "event_type": {"const": "sound_detected"},
    "event_data": {
      "type": "object",
      "required": ["classification", "audio_metrics"],
      "properties": {
        "classification": {
          "type": "object",
          "required": ["label", "confidence"],
          "properties": {
            "label": {"type": "string"},
            "confidence": {"type": "number", "minimum": 0, "maximum": 1},
            "alternative_labels": {"type": "array"}
          }
        },
        "audio_metrics": {
          "type": "object",
          "properties": {
            "duration_ms": {"type": "integer"},
            "sample_rate": {"type": "integer"},
            "rms_energy": {"type": "number"},
            "peak_amplitude": {"type": "number"},
            "clipping_detected": {"type": "boolean"},
            "snr_db": {"type": "number"}
          }
        }
      }
    }
  },
  "additionalProperties": true
}
